  <body>
  <div id="container">

    <p hidden id="time_range">{{time_range}}<p> 
    <p hidden id="alt">{{alt}}</p>

    <span id="question" class="glyphicon glyphicon-info-sign"></span>  

    {{#if alt}}
      <p id="directions" style="background-color:white;color:rgba(53, 185, 247, 1);">Drag a few words into the cloud to start.</p>
    {{else}}
      <p id="directions">Drag a few words into the cloud to start.</p>
    {{/if}}

    <div class="draggable oval outside" id="word1">
      <p class="word">Alone</p>
    </div>

    <div class="draggable oval outside" id="word2">
      <p class="word">Friends</p>
    </div>

