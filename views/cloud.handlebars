    </div>

    <div class="draggable oval outside" id="word6">
      <p class="word">Quiet</p>
    </div>

    <div class="draggable oval outside" id="word7">
      <p class="word">Tactile</p>
    </div>

    <div class="draggable oval outside" id="word8">
      <p class="word">Explore</p>
    </div>

    <div class="draggable oval outside" id="word9">
      <p class="word">Reflect</p>
    </div>

    <div class="draggable oval outside" id="word10">
      <p class="word">Think</p>
    </div>

    <div class="draggable oval outside" id="word11">
      <p class="word">Learn</p>
    </div>

    <div class="draggable oval outside" id="word12">
      <p class="word">Calm</p>
    </div>

    <div class="rainy-weather">
      <div class="cloud-main droppable"></div>
      <div class="cloud-center droppable"></div>
      <div class="cloud-left droppable"></div>
    </div>
    <!-- <div id="button_div"><button id="my_button"><p>Build Daydream</p></button></div> -->

    <div id="nagivation_bar">
    <ol class="nav nav-pills">
      <li class = "active">
        <a href="/clock">
          <span class="glyphicon glyphicon-time"></span>  
          Change Time
        </a>
      </li>
      <li class = "active">
        <a href="#" class="disabled" id="finish">
          <span class="glyphicon glyphicon-ok-sign"></span>
          Finish
        </a>
      </li>
    </ol>
    </div>
 
